<!DOCTYPE html>
<html lang="en">

<head>
    <title>{{ title }}</title>
    <link rel="stylesheet" href="{{ '/assets/css/index.css' | url }}">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="google-site-verification" content="{{ env.CONTENT }}" />
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id={{ env.GOOGLE }}"></script>
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client={{ env.CLIENT }}" crossorigin="anonymous"></script>
</head>

<body class="transition-all ease-in-out min-h-[100vh] w-screen flex flex-col justify-between">
    {% set navPages = collections.all | eleventyNavigation %}

    <div>
        <nav class="navbar bg-base-300 md:flex">
            <div class="flex-1">
                <a class="btn btn-ghost text-blue-500 dark:text-blue-400 text-xl" href="/">UUN</a>
            </div>
            <div class="flex-none">
                <ul class="hidden menu p-0 sm:contents">
                    {% for entry in navPages %}
                    <li>
                        <a href="{{ entry.url }}"
                            class="btn btn-ghost hover:no-underline text-black hover:text-black dark:text-white dark:hover:text-blue-200 text-base">
                            {{ entry.title }}
                        </a>
                    </li>
                    {% endfor %}
                </ul>
                <div class="inline dropdown dropdown-end dropdown-hover sm:hidden">
                    <label tabindex="0" class="btn btn-ghost m-1">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                            class="inline-block w-5 h-5 stroke-current">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M5 12h.01M12 12h.01M19 12h.01M6 12a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0z">
                            </path>
                        </svg>
                    </label>
                    <ul tabindex="0" class="dropdown-content menu p-2 shadow bg-base-100 rounded-box w-52">
                        {% for entry in navPages %}
                        <li>
                            <a href="{{ entry.url }}"
                                class="btn btn-ghost hover:no-underline text-blacknp hover:text-black dark:text-white dark:hover:text-blue-200 text-base">
                                {{ entry.title }}
                            </a>
                        </li>
                        {% endfor %}
                    </ul>
                </div>

                <label class="swap swap-rotate btn btn-link text-base-content">
                    <input id="lol" type="checkbox" data-toggle-theme="dark,light" data-act-class="ACTIVECLASS" />
                    <div class="swap-on">
                        <ion-icon name="moon" class="align-middle text-base"></ion-icon>
                    </div>
                    <div class="swap-off">
                        <ion-icon name="sunny" class="align-middle text-base"></ion-icon>
                    </div>
                </label>
            </div>
        </nav>
        <main class="px-8 py-4 sm:px-12">
            {{ content | safe }}
        </main>
    </div>
    <footer class="footer footer-center p-4 bg-base-300 text-base-content">
        <div class="grid grid-flow-col gap-5">
            <a class="link link-hover" href="/about/">About</a>
            <div> - </div>
            <a class="link link-hover" href="/contact/">Contact</a>
            <div> - </div>
            <a class="link link-hover" href="/tos/">Terms of Service</a>
            <div> - </div>
            <a class="link link-hover" href="/privacy/">Privacy Policy</a>
        </div>
        <div>
            <p>Provided by the United Universal Nations.</p>
        </div>
    </footer>
</body>
<script type="module" src="/assets/js/easteregg.js"></script>
<script type="module" src="/assets/js/imports.js"></script>
<script type="module" src="/~ionicons/ionicons/ionicons.esm.js"></script>
</html>